<Window x:Class="SimpleNotes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNotes"
        xmlns:_="clr-namespace:SimpleNotes.ThemedControls"
        mc:Ignorable="d"
        Title="SimpleNotes" Height="400" Width="600" WindowStartupLocation="CenterScreen" MinWidth="222" MinHeight="200"
        DataContext="{Binding RelativeSource={RelativeSource Self}}" FontSize="14" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Closing="WindowClosing">
    <Grid>
        <DockPanel LastChildFill="True">
            <Menu MinHeight="24" DockPanel.Dock="Top" FontSize="14">
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Left"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="_File">
                    <MenuItem Command="New" />
                    <MenuItem Header="_Choose folder..." />
                    <Separator />
                    <MenuItem Command="Save" />
                    <MenuItem Header="_Save all" Click="SaveNotesClick" />
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Header="_Rename..." />
                    <MenuItem Header="_Delete" />
                </MenuItem>
                <MenuItem Header="_View">
                    <MenuItem Header="_Wrap lines" x:Name="wrapLinesMenuItem" IsCheckable="True" IsChecked="True" StaysOpenOnClick="True" />
                    <MenuItem Header="_Font..." />
                </MenuItem>
                <MenuItem Header="_Add note..." Click="AddNoteClick"/>
            </Menu>
            <TabControl
                ItemsSource="{Binding Notes, FallbackValue=None}"
                Padding="0" BorderThickness="0">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Name, FallbackValue=Tab name}"/>
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <_:TextBox
                            Text="{Binding Text, UpdateSourceTrigger=PropertyChanged, FallbackValue=Lorem ipsum dolor sit amet}"
                            Padding="4"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            HorizontalScrollBarVisibility="Auto"
                            FontFamily="Consolas" FontSize="18"
                            TextWrapping="Wrap" />
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
